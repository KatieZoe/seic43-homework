<%= form_for @location do |f| %>
<%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :visit_time %>
  <%= f.text_field :time_to_visit %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.label :info %>
  <%= f.text_area :info, :col => 4, :rows => 5 %>

  <%= f.label :city_id %>
  <%= f.url_field :city_id, City.pluck(:name, :id) %>

  <%= f.submit %>
<% end %>
